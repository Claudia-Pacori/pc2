<h1> Estudiantes</h1>
    <p >
        <div class="container">
            <h3><a href="/estudiantes/create">Agregar estudiante</a></h3>
            <h1>Lista de Estudiantes</h1>
            {{#if estudiantes }}
                <table class="table table-hover", border="1">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# each estudiantes }}
                        <tr>
                            <td>{{ codigo }}</a></td>
                            <td>{{ nombre }}</td>
                            <td>{{ apellido }}</td>
                            <td>{{ email }}</td>
                            <td>{{ estado }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{~^~}}
                <div>Estudiantes no registrados.</div>
            {{/if}}
        </div>
    </p>